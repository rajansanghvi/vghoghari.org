@{
  ViewBag.Title = "User Login";
}

<!-- Start Nav Backed Header -->
<div class="nav-backed-header parallax">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ol class="breadcrumb">
          <li>@Html.ActionLink("Home", "Index", "Home")</li>
          <li class="active">User</li>
          <li class="active">Login</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- End Nav Backed Header -->
<!-- Start Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>User Login</h1>
      </div>
    </div>
  </div>
</div>
<!-- End Page Header -->
<!-- Start Content -->
<div class="main" role="main">
  <div id="content" class="content full">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <header class="single-post-header clearfix">
            <h2 class="post-title">Login Now!</h2>
          </header>
          <div class="post-content">
            <div class="row">
              <form id="loginForm" name="loginForm" role="form" data-toggle="validator">
                <div class="col-md-12 margin-15 text-warning">
                  <p class="text-center">Not registered yet? @Html.ActionLink("Click here", "Register", "User", null, new { @class = "no-underline" }) and go to the new user registration page.</p>
                </div>
                <div class="col-md-12 margin-15 text-info">
                  <p class="text-center">All fields marked with * are compulsory. Please fill in the required details and login now!</p>
                </div>
                <div class="col-md-6 margin-15">
                  <div class="form-group has-feedback">
                    <input type="text" id="username" name="username" class="form-control input-lg" placeholder="Username *" data-required-error="This is a mandatory input field." pattern="^(?!.*\.\.)(?!.*\.$)[^\W][\w.]{0,29}$" data-pattern-error="This field can contain alphabets (A to Z or a to z), digits (0 to 9), underscores (_) and periods (.). It can not start or end with a period (.) and can not have more than one period (.) sequentially. Max length possible is 30 characters." required>
                    <div class="help-block with-errors custom-error" id="err-username"></div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group has-feedback">
                    <div class="form-group has-feedback">
                      <input type="password" id="password" name="password" class="form-control input-lg" placeholder="Password *" data-required-error="This is a mandatory input field." pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,}$" data-pattern-error="This field must contain atleast one upper level alphabet (A to Z), one lower level alphabet (a to z), one digit (0 to 9) and can have any special character. Minimum length required is 8 characteres." required>
                      <div class="help-block with-errors custom-error" id="err-password"></div>
                    </div>
                  </div>
                  <div class="checkbox">
                    <label class="control-label" for="persistent">
                      <input type="checkbox" id="persistent" name="persistent" class="form-horizontal" checked> Keep me logged in.
                    </label>
                  </div>
                </div>
              </form>
              <div class="col-md-12">
                <div id="err-message" class="alert alert-error fade in hide"></div>
              </div>
              <div class="col-md-12">
                <button id="btn-login" name="submit" type="submit" form="loginForm" class="btn btn-primary btn-lg pull-right stretch-full-width"> Login </button>
                <button id="btn-reset" name="reset" type="reset" form="loginForm" class="btn btn-default btn-lg stretch-full-width"> Reset </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section scripts {
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>

  @Scripts.Render("~/Scripts/custom/constants.js")
  @Scripts.Render("~/Scripts/custom/root.js")
  @Scripts.Render("~/Scripts/custom/login.js")
}

